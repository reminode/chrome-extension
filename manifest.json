{
    "manifest_version": 3,
    "name": "Second-Brain Extension",
    "version": "1.0",
    "description": "Save notes, URLs, and tweets to your Second-Brain app.",
    "permissions": ["contextMenus", "activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "host_permissions": ["https://*/*", "http://*/*"]
  }
  